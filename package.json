{
  "name": "thallium",
  "version": "0.2.8",
  "description": "A simple, unopinionated, modular test framework",
  "main": "index.js",
  "scripts": {
    "bundle": "browserify -dr ./lib/browser-bundle.js:thallium -o thallium.js",
    "release": "npm run test && npm run bundle",
    "preversion": "npm run release && git add CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "version": "git add thallium.js",
    "lint": "eslint . --cache && coffeelint . --cache",
    "test": "npm run lint && npm run test:mocha && npm run test:karma",
    "test:karma": "karma start --single-run --browsers Chrome",
    "test:mocha": "mocha",
    "watch": "chokidar --initial -i \"**/test-bundle.js\" \"{bin,fixtures,helpers,lib,r,scripts,test}/**/{.,}*.{js,coffee}\" \"{index,core,assertions}.js\" -c \"npm run test\"",
    "watch:karma": "chokidar --initial -i \"**/test-bundle.js\" \"{bin,fixtures,helpers,lib,r,scripts,test}/**/{.,}*.{js,coffee}\" \"{index,core,assertions}.js\" -c \"npm run test:karma\"",
    "watch:mocha": "chokidar --initial -i \"**/test-bundle.js\" \"{bin,fixtures,helpers,lib,r,scripts,test}/**/{.,}*.{js,coffee}\" \"{index,core,assertions}.js\" -c \"npm run test:mocha\""
  },
  "browser": {
    "./lib/replaced/is-buffer.js": "is-buffer",
    "./lib/replaced/inspect.js": "util-inspect",
    "./lib/replaced/console.js": "./lib/replaced/console-browser.js",
    "jsdom": "empty/object"
  },
  "files": [
    "assertions.d.ts",
    "assertions.js",
    "core.d.ts",
    "core.js",
    "index.d.ts",
    "index.js",
    "thallium.js",
    "thallium.d.ts",
    "lib",
    "bin",
    "r",
    "docs"
  ],
  "bin": {
    "tl": "bin/thallium.js",
    "thallium": "bin/thallium.js",
    "_thallium": "bin/_thallium.js"
  },
  "keywords": [
    "test",
    "testing",
    "tdd",
    "thallium"
  ],
  "author": "Isiah Meadows <me@isiahmeadows.com>",
  "license": "ISC",
  "devDependencies": {
    "benchmark": "^2.1.1",
    "browserify": "^13.0.1",
    "chokidar-cli": "^1.2.0",
    "coffee-script": "^1.10.0",
    "coffeelint": "^1.15.7",
    "empty": "^0.10.1",
    "eslint": "^3.4.0",
    "eslint-config-isiahmeadows": "^0.1.6",
    "jsdom": "^9.4.0",
    "karma": "^1.1.0",
    "karma-browserify": "^5.0.5",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "mocha": "^3.0.2",
    "readline-sync": "^1.4.4",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "bluebird": "^3.4.1",
    "glob": "^7.0.5",
    "interpret": "1",
    "is-buffer": "1",
    "minimatch": "^3.0.2",
    "resolve": "^1.1.7",
    "through2": "2",
    "util-inspect": "^0.1.8"
  },
  "directories": {
    "lib": "lib",
    "doc": "docs",
    "example": "docs/examples"
  },
  "repository": "isiahmeadows/thallium",
  "bugs": "https://github.com/isiahmeadows/thallium/issues",
  "homepage": "https://github.com/isiahmeadows/thallium#readme"
}
